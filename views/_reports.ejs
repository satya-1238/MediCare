<link rel="stylesheet" href='/css/reports.css'>

<div class="report-container">
    <div class="update uploadfile">
        <h2 class="heading">Upload Reports</h2>
        <form class="uploadFile" action="/treatments/uploadmultiple" enctype="multipart/form-data" method="POST">
            
                <%
                    if(user.user_type==='patient')
                      {%>
                        <input type="hidden" class="form-control"  id="title" value="<%=treatment.doctor.email%>"placeholder="Enter Email" autocomplete="off" required><br>
                        <input type="hidden" class="form-control"  id="recieverName" value="<%=treatment.doctor.name%>"placeholder="Enter Email" autocomplete="off" required><br>
                      <%}
                    else
                      {%>
                        <input type="hidden" class="form-control"  id="title" value="<%=treatment.patient.email%>"placeholder="Enter Email" autocomplete="off" required><br>
                        <input type="hidden" class="form-control"  id="recieverName" value="<%=treatment.patient.name%>"placeholder="Enter Email" autocomplete="off" required><br>
                      <%}
                %>
          
                <input type="text" class="form-control" id="message" placeholder="Enter Message" autocomplete="off" required><br>
                  <label for="">Select files</label>
                  <input type="file" name="myFiles" multiple id="user_files">
                <input class="sub" type="submit" value="Upload File" class="download-delete-btn-success" id="submit"download-delete-btn">
                <input class="sub" value="Cancel" class="download-delete-btn-danger" id="cancel"download-delete-btn">
            
        </form>   
    </div>
    <div class="">
           <%
                if(user.user_type==='patient')
                {%>
                  <div class="reports-section">
                    <h1 class="">Recieved Reports : <%=files2.length%></h1>
                    <div class="table-header">
                      <table cellpadding="0" cellspacing="0" border="0">
                        <thead>
                          <tr>
                            <th>From</th>
                            <th>Filename</th>
                            <th>Message</th>
                            <th>Download</th>
                            <th>Delete</th>
                          </tr>
                        </thead>
                      </table>
                    </div>
                    <div class="table-content">
                      <table cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                          <%
                          for( a of files2)
                          {%>
                              <tr>
                                <td><p>Dr.<%=a.senderName%></p></td>
                                <td><p><%=a.originalName%></p></td>
                                <td><p><%=a.message%></p></td>
                                <td><button class="download-delete-btn"><a  clss="link-appoint"href="/treatments/download/<%=a.id%>"><img src='/images/icons8-download-16.png' alt="can't open"></a></button></td>
                                <td><button class="download-delete-btn"><a  clss="link-appoint"href="/treatments/delete/<%=a.id%>"><img src='/images/icons8-delete-32.png' alt="can't open"></a></button></td>
                              </tr>
                          <%}%>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <div class="reports-section">
                    <h1 class="">Sent Reports : <%=files1.length%></h1>
