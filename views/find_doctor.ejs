
<link rel="stylesheet" href='/css/find_doctor.css'>
<section id="doctors" class="section ">
    <div class="search">
    <form class="searchform" action="/doctors/search" method="GET">
        <input class="bar" type="text" style="letter-spacing: 0.2rem; font-size:1rem;font-weight:bold;"  placeholder="Search Doctors ....          Type Name or Location or service " name="docname" value="">
        <button><i class="fas fa-search"></i></button>
    </form>
</div>
        <div class="grid-container">

            
                <% 

                for(d of doctors_list)
                {%>
                         <div class="grid-item" id="serv-1">
                             <ul class="outer">
                                 <ul class="photo-name">
                                    <li><img src="<%=d.avatar%>" alt="can't open"></li>
                                    
                                     <li class="name">
                
                                        <h3><%=d.name%></h3>
                                     </li>
                                 </ul>
                                 <li class="same">
                                    <h4>Services</h4>
                                    <ul>
                                        <li><%=d.services%></li>
                                    </ul>
                                </li>
                                 <li class="same">
                                    <h4>Locations</h4>
                                    <ul>
                                        <li><%=d.locations%></li>
                                    </ul>
                                 </li>
                                 <%if(locals.patient)
                                 {%>
                                    <li class="appointment"><a href="/appointments/do/<%=d.id%>">GET AN APPOINTMENT</a></li>

                                 <%}%>
                                 <li class="appointment"><a href="/doctors/profile/<%=d.id%>">VIEW PROFILE</a></li>
                             </ul>
                         </div>
                 <%} %> 
                         
            <!-- </div> -->
            
        </div>
</section>
    

