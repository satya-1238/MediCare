<link rel="stylesheet" href='/css/reports.css'>
<link rel="stylesheet" href='/css/doctors_appointment.css'>
<div class="outer">
    <%=user.user_type%>
    <div class="uploadfile">
        <form class="uploadImage" action="/treatments/uploadmultiple" enctype="multipart/form-data" method="POST">
            <div class="form-group">
                <%
                    if(user.user_type==='patient')
                      {%>
                        <input type="hidden" class="form-control"  id="title" value="<%=treatment.doctor.email%>"placeholder="Enter Email" autocomplete="off" required><br>
                        <input type="hidden" class="form-control"  id="recieverName" value="<%=treatment.doctor.name%>"placeholder="Enter Email" autocomplete="off" required><br>
                      <%}
                    else
                      {%>
                        <input type="hidden" class="form-control"  id="title" value="<%=treatment.patient.email%>"placeholder="Enter Email" autocomplete="off" required><br>
                        <input type="hidden" class="form-control"  id="recieverName" value="<%=treatment.patient.name%>"placeholder="Enter Email" autocomplete="off" required><br>
                      <%}
                %>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="message" placeholder="Enter Message" autocomplete="off" required><br>
            </div>
            <div class="form-group">
            Select Files: <input type="file" name="myFiles" multiple id="user_files">
                <br>
                <input type="submit" value="Upload File" class="btn btn-success" id="submit-btn">
                <input value="Cancel" class="btn btn-danger" id="cancel-btn">
            </div>
        </form>   
    </div>
    <div class="file-manage">
        <%
           if(files1.length==0 && files2.length==0)
            {%>
                 <p>You have no any reports</p>
            <%}
           else
            {%>
                <%
                if(user.user_type==='patient')
                {%>
                    <p>Recieved Reports</p>
                    <table>
                        <tr>
                           <th>From</th>
                           <th>To</th>
                           <th>Filename</th>
                           <th>Message</th>
                           <th>Download</th>
                           <th>Delete</th>
                        </tr>
                        <%
                           for( a of files2)
                             {%>
                                 <tr>
                                   <td><p>Dr.<%=a.senderName%></p></td>
                                   <td><p><%=a.recieverName%></p></td>
                                   <td><p><%=a.originalName%></p></td>
                                   <td><p><%=a.message%></p></td>
                                   <td><button class="btn"><a  clss="link-appoint"href="/treatments/download/<%=a.id%>"><img src='/images/icons8-download-16.png' alt="can't open"></a></button></td>
                                   <td><button class="btn"><a  clss="link-appoint"href="/treatments/delete/<%=a.id%>"><img src='/images/icons8-delete-32.png' alt="can't open"></a></button></td>
                                 </tr>
                             <%}
                        %>
                     </table>
                     <p> Sent Reports</p>
                     <table>
                        <tr>
                           <th>From</th>
                           <th>To</th>
                           <th>Filename</th>
                           <th>Message</th>
                           <th>Download</th>
                           <th>Delete</th>
                        </tr>
                        <%
                            for( a of files1)
                                {%>
                                <tr>
                                  <td><p><%=a.senderName%></p></td>
                                  <td><p>Dr.<%=a.recieverName%></p></td>
                                  <td><p><%=a.originalName%></p></td>
                                  <td><p><%=a.message%></p></td>
                                  <td><button class="btn"><a  clss="link-appoint"href="/treatments/download/<%=a.id%>"><img src='/images/icons8-download-16.png' alt="can't open"></a></button></td>
                                  <td><button class="btn"><a  clss="link-appoint"href="/treatments/delete/<%=a.id%>"><img src='/images/icons8-delete-32.png' alt="can't open"></a></button></td>
                                </tr>
                               <%}
                         %>
                  </table>
                <%}
                else
    {%>
        <p>Recieved Reports</p>
        <table>
            <tr>
               <th>From</th>
               <th>To</th>
               <th>Filename</th>
               <th>Message</th>
               <th>Download</th>
               <th>Delete</th>
            </tr>
            <%for( a of files1)
                {%>
                    <tr>
                      <td><p><%=a.senderName%></p></td>
                      <td><p><%=a.recieverName%></p></td>
                      <td><p><%=a.originalName%></p></td>
                      <td><p><%=a.message%></p></td>
                      <td><button class="btn"><a  clss="link-appoint"href="/treatments/download/<%=a.id%>"><img src='/images/icons8-download-16.png' alt="can't open"></a></button></td>
                      <td><button class="btn"><a  clss="link-appoint"href="/treatments/delete/<%=a.id%>"><img src='/images/icons8-delete-32.png' alt="can't open"></a></button></td>
                    </tr>
                <%}
            %>
         </table>
         <p> Sent Reports</p>
         <table>
            <tr>
               <th>From</th>
               <th>To</th>
               <th>Filename</th>
               <th>Message</th>
               <th>Download</th>
               <th>Delete</th>
            </tr>
            <%for( a of files2)
              {%>
                  <tr>
                      <td><p><%=a.senderName%></p></td>
                      <td><p><%=a.recieverName%></p></td>
                      <td><p><%=a.originalName%></p></td>
                      <td><p><%=a.message%></p></td>
                      <td><button class="btn"><a  clss="link-appoint"href="/treatments/download/<%=a.id%>"><img src='/images/icons8-download-16.png' alt="can't open"></a></button></td>
                      <td><button class="btn"><a  clss="link-appoint"href="/treatments/delete/<%=a.id%>"><img src='/images/icons8-delete-32.png' alt="can't open"></a></button></td>
                  </tr>
              <%}
             %>
        </table>
    <%}

            %>
                 
            <%}      
        %>
    </div>
</div>

