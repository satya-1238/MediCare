                      <table cellpadding="0" cellspacing="0" border="0">
                        <thead>
                          <tr>
                            <th>To</th>
                           <th>Filename</th>
                           <th>Message</th>
                           <th>Download</th>
                           <th>Delete</th>
                          </tr>
                        </thead>
                      </table>
                    </div>
                    <div class="table-content">
                      <table cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                          <%
                          for( a of files1)
                                {%>
                                <tr>
                                  <td><p>Dr.<%=a.recieverName%></p></td>
                                  <td><p><%=a.originalName%></p></td>
                                  <td><p><%=a.message%></p></td>
